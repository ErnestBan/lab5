<p id="notice"><%= notice %></p>

<h1>Candies</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candies.each do |candy| %>
      <tr>
        <td><%= candy.name %></td>
        <td><%= link_to 'Show', candy , class:"btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_candy_path(candy) , class:"btn btn-success" %></td>
        <td><%= link_to 'Destroy', candy, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Candy', new_candy_path , class:"btn btn-success" %>
